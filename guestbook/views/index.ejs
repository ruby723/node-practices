<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
</head>
<body>
	<h1>GuestBook</h1>
	<form action="/add" method = "post">
		<table width="50%" border="1" cellpadding="5" cellspacing="2">
			<tr>
				<td>이름</td>
				<td><input type="text" name="name" value=""></td>
				<td>비밀번호</td>
				<td><input type="text" name="password" value=""></td>
			</tr>
			<tr>
				<td colspan=4><textarea name="message" id="content"></textarea></td>
			</tr>
			<tr>
				<td colspan=4 align=right><input type="submit" value=" 확인 "></td>
			</tr>
		</table>
	</form>
<br/><br/>
	<!-- guestbook 리스트 -->
	<%
	for(let i = 0; i < list.length; i++) {
		const vo = list[i];
	%>
		<table width="47%" border="1" cellpadding="5" cellspacing="2">
			<tr>
				<td align="center" width="20px"><%=vo.no %></td>
				<td width="90px"><%=vo.name %></td>
				<td><%=vo.regdate %></td>
				<td><a href="/delete/<%= vo.no %>">삭제</a></td>
			</tr>
			<tr>
				<td colspan=4><%= vo.message%></td>
			</tr>
		</table>
		<br>
	<%
		}
	%>

	<br>
</body>
</html>